#:kivy 1.10.1

<CreateUserScreen>:
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'

        BoxLayout:
            size_hint: [None, None]
            size: [300, 400]
            spacing: 40

            orientation: 'vertical'

            Label:
                size_hint: [1, 0.15]
                text: 'Criação de usuário'
                font_size: 20
            BoxLayout:
                size_hint: [1, 0.7]

                orientation: 'vertical'

                Label:
                    text: 'Usuário:'
                    text_size: self.size
                    halign: 'left'
                TextInput:
                    multiline: False
                Label:
                    text: 'Senha local:'
                    text_size: self.size
                    halign: 'left'
                TextInput:
                    multiline: False
                Label:
                    text: 'Senha local:'
                    text_size: self.size
                    halign: 'left'
                TextInput:
                    multiline: False
            Button:
                size_hint: [0.8, 0.15]
                pos_hint: { 'center_x': 0.5 }
                text: 'Criar'
                on_press: root.manager.current = 'current'

<LoginScreen>:
    Label:
        text: 'Essa e a pagina de login'

